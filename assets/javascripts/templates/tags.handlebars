<h3>Tags</h3>
<div class="row">
  <div class="twelve columns">
    <ol>
      {{#each tagObject in controller}}
        <li>
          <div {{bindAttr class=":main_box tagObject.isEditing:editing tagObject.isDeleting:deleting"}}>
            <div class="main_view">
              {{tagObject.name}} ({{tagObject.tag}}), {{tagObject.days}} deadline
              <a href="#" {{action openEditMode tagObject target="controller"}}>Edit</a>
              <a href="#" {{action openDeleteMode tagObject target="controller"}}>Delete</a>
            </div>
            <div class="edit_view">
              <form>
                <div class="row">
                  <div class="six columns">
                    {{view Ember.TextField valueBinding="tagObject.name" placeholder="Name"}}
                  </div>
                  <div class="three columns">
                    {{view Ember.TextField valueBinding="tagObject.tag" placeholder="Tag"}}
                  </div>
                  <div class="three columns">
                    {{view App.NumberField valueBinding="tagObject.days" placeholder="Days"}}
                  </div>
                </div>
                <div class="row">
                  <div class="six columns">
                    {{#if tagObject.isNew}}
                      <a class="button" href="#">Add</a>
                      <a>Cancel</a>
                    {{else}}
                      <a class="button" href="#" {{action editTag tagObject target="controller"}}>Edit</a>
                      <a href="#" {{action closeAllMode tagObject target="controller"}}>Cancel</a>
                    {{/if}}
                  </div>
                </div>
              </form>
            </div>
            <div class="delete_view">
              A you sure want delete this tag?
              <a>Confirm delete</a>
              <a href="#" {{action closeAllMode tagObject target="controller"}}>Cancel</a>
            </div>
          </div>
        </li>
      {{/each}}
    </ol>
  </div>
</div>
